<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gpa.app.controller.DashboardController">
    <center>
        <SplitPane dividerPositions="0.25066785396260016" orientation="HORIZONTAL" BorderPane.alignment="CENTER">
            <VBox alignment="TOP_CENTER" prefWidth="200.0">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #333333;" text="Students (Rolls)">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </Label>
                <ListView fx:id="studentListView" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                    </VBox.margin>
                </ListView>
                <Button fx:id="createNewButton" mnemonicParsing="false" onAction="#handleCreateNewStudent" prefHeight="40.0" prefWidth="170.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Add New Student">
                    <VBox.margin>
                        <Insets bottom="15.0" />
                    </VBox.margin>
                </Button>
            </VBox>

            <VBox spacing="20.0">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
                <Label style="-fx-font-weight: bold;" text="Student Details">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>

                <HBox alignment="CENTER_LEFT" spacing="40.0">
                    <VBox prefHeight="130.0" prefWidth="407.0" spacing="5.0" HBox.hgrow="ALWAYS">
                        <Label text="Name:">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                        <Label fx:id="studentNameLabel" style="-fx-font-weight: bold;" text="[Select a Student]">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                        <Label text="Roll:">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                        <Label fx:id="studentRollLabel" style="-fx-font-weight: bold;" text="[Roll Number]">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                    </VBox>
                    <VBox alignment="CENTER" spacing="5.0">
                        <Label text="Overall GPA" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="20.0" />
                            </font>
                        </Label>
                        <Label fx:id="gpaValueLabel" style="-fx-font-weight: bold; -fx-text-fill: #c0392b;" text="0.00">
                            <font>
                                <Font size="64.0" />
                            </font>
                        </Label>
                    </VBox>
                </HBox>

                <HBox spacing="10.0">
                    <Button fx:id="updateGradesButton" mnemonicParsing="false" onAction="#handleUpdateGrades" prefWidth="180.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;" text="Update/Change Grades" />
                    <Button fx:id="deleteRecordButton" mnemonicParsing="false" onAction="#handleDeleteRecord" prefWidth="180.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Delete Record" />
                </HBox>

                <Label text="Detailed Result (Course Grades)">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <TableView fx:id="detailedResultTable" prefHeight="200.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="courseCodeCol" prefWidth="100.0" text="Course Code" />
                        <TableColumn fx:id="courseNameCol" prefWidth="300.0" text="Course Name" />
                        <TableColumn fx:id="creditsCol" prefWidth="75.0" text="Credits" />
                        <TableColumn fx:id="gradeCol" prefWidth="75.0" text="Letter Grade" />
                        <TableColumn fx:id="gpaCol" prefWidth="75.0" text="Grade Point" />
                    </columns>
                </TableView>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>
