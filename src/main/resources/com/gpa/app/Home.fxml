<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.gpa.app.controller.HomeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="CGPA Calculator" />
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <Label text="Total Credit   ">
            <HBox.margin>
               <Insets />
            </HBox.margin>
            <padding>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
         </Label>
         <TextField fx:id="totalCreditNumber" promptText="e.g. 20" prefHeight="26.0" prefWidth="116.0" />
      </children>
   </HBox>
    <Button onAction="#startCalculator" text="Start!" />
</VBox>
