<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox alignment="TOP_CENTER" prefHeight="650.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gpa.app.controller.ResultController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Label text="OFFICIAL REPORT" style="-fx-font-weight: bold; -fx-font-size: 24pt;" />
    <Label text="Based on your inputs, here are your results." />

    <VBox alignment="CENTER" spacing="10.0" style="-fx-border-color: #3f51b5; -fx-border-width: 3; -fx-padding: 20px; -fx-border-radius: 5;">
        <Label text="OVERALL WEIGHTED GPA" style="-fx-font-size: 14pt;" />
        <Label fx:id="gpaResultLabel" text="0.00" style="-fx-font-weight: bold; -fx-font-size: 48pt; -fx-text-fill: #f44336;">
            <font><Font name="System Bold" size="48.0" /></font>
        </Label>
    </VBox>

    <Label text="Detailed Course Information" style="-fx-font-weight: bold; -fx-font-size: 16pt;" />
    <TableView fx:id="resultTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="Course Name" prefWidth="200.0">
                <cellValueFactory><PropertyValueFactory property="courseName" /></cellValueFactory>
            </TableColumn>
            <TableColumn text="Code" prefWidth="90.0">
                <cellValueFactory><PropertyValueFactory property="courseCode" /></cellValueFactory>
            </TableColumn>
            <TableColumn text="Credit" prefWidth="70.0">
                <cellValueFactory><PropertyValueFactory property="courseCredit" /></cellValueFactory>
            </TableColumn>
            <TableColumn text="Grade" prefWidth="70.0">
                <cellValueFactory><PropertyValueFactory property="grade" /></cellValueFactory>
            </TableColumn>
            <TableColumn text="Grade Point" prefWidth="100.0">
                <cellValueFactory><PropertyValueFactory property="gradePointDisplay" /></cellValueFactory>
            </TableColumn>
            <TableColumn text="Teacher 1" prefWidth="150.0">
                <cellValueFactory><PropertyValueFactory property="teacher1Name" /></cellValueFactory>
            </TableColumn>
            <TableColumn text="Teacher 2" prefWidth="150.0">
                <cellValueFactory><PropertyValueFactory property="teacher2Name" /></cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</VBox>